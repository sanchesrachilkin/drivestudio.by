<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.7//DTD template 1.0//EN"
    "http://www.joomla.org/xml/dtd/1.7/template-install.dtd">

<extension version="2.5" type="template" client="site" method="upgrade">
    <name>Drive Studio</name>
    <creationDate>31.08.2017</creationDate>
    <author>Alexandr Rachila</author>
    <authorEmail>sanchesrachilkin@yandex.ru</authorEmail>
    <authorUrl>https://vk.com/alexandrrachila</authorUrl>
    <copyright>Copyright (C) 2017 Alexandr Rachila, All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl.html GNU/GPL</license>
    <version>1.0</version>
    <description><![CDATA[
       <p>Шаблон детской музыкальной студии Драйв</p>
    ]]></description>

    <files>
        <folder>css</folder>
        <folder>fonts</folder>
        <folder>html</folder>
        <folder>images</folder>
        <folder>js</folder>
        <folder>less</folder>
        <folder>partial</folder>
        <folder>php</folder>
        <folder>scss</folder>
        <filename>component.php</filename>
        <filename>error.php</filename>
        <filename>favicon.ico</filename>
        <filename>index.html</filename>
        <filename>index.php</filename>
        <filename>offline.php</filename>
        <filename>raw.php</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <filename>templateDetails.xml</filename>
    </files>

    <positions>
        <position>header</position>
        <position>navigation</position>
        <position>breadcrumbs</position>
        <position>content</position>
        <position>left</position>
        <position>footer</position>
    </positions>

    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field name="less_processor" type="radio" default="gpeasy" label="Less processor lib">
                    <option value="gpeasy">lessphp.gpeasy.com (recommended)</option>
                    <option value="leafo">leafo.net/lessphp</option>
                    <option value="js">lesscss.org (JS in Browser, no cache!)</option>
                </field>
            </fieldset>
        </fields>
    </config>

</extension>
